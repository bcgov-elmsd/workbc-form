        <input type="text" class="form-control" id="phone" name="phone"><%= data.phone %></input>
        <% if (errors.phone) { %>
          <div class="error"><%= errors.phone.msg %></div>
        <% } %>
      </div>
      <div class="form-group <%= errors.email ? 'form-field-invalid' : '' %>">
