          <label class="col-form-label control-label" for="city">City</label>
          <input type="text" class="form-control" id="city" name="city"><%= data.city %></input>
          <% if (errors.city) { %>
            <div class="error"><%= errors.city.msg %></div>
          <% } %>
        </div>
        <div class="form-group col-md-4 <%= errors.postal ? 'form-field-invalid' : '' %>">
          <label class="col-form-label control-label" for="postal">Postal Code</label>
          <input type="text" class="form-control" id="postal" name="postal"><%= data.postal %></input>
