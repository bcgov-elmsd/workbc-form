<div class="row">
    <div class="col-lg-12">
      <% if (Object.keys(errors).length === 0) { %>
        <h1 id="forms">Form</h1>
      <% } else { %>
        <h2 class="errors-heading">Oops, please correct the following:</h2>
        <ul class="errors-list">
          <% Object.values(errors).forEach(error => { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
    
  <div class="row">
      <div class="col-md-12">
    <form method="post" action="/" novalidate>
